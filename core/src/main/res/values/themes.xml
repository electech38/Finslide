<resources>
    <!-- Player theme -->
    <style name="Theme.Findroid.Player" parent="Theme.Findroid">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Findroid" parent="Base.Theme.Findroid" />

    <style name="Base.Theme.Findroid" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@color/primary_container_dark</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container_dark</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorSecondaryContainer">@color/secondary_container_dark</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container_dark</item>

        <!-- Surface -->
        <item name="android:colorBackground">@color/neutral_900</item>
        <item name="colorSurface">@color/neutral_800</item>
        <item name="colorSurfaceContainer">?attr/colorSurface</item>
        <item name="colorSurfaceContainerLow">?attr/colorSurface</item>
        <item name="colorSurfaceContainerHigh">?attr/colorSurface</item>

        <!-- Error -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@android:color/white</item>

        <!-- Shapes -->
        <item name="shapeAppearanceCornerExtraSmall">
            @style/ShapeAppearance.Findroid.Corner.ExtraSmall
        </item>
        <item name="shapeAppearanceCornerSmall">@style/ShapeAppearance.Findroid.Corner.Small</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Extra -->
        <item name="elevationOverlayEnabled">false</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog</item>
        <item name="dialogCornerRadius">28dp</item>
        <item name="preferenceTheme">@style/ThemeOverlay.Findroid.Preference</item>
        
        <!-- Thiết lập full screen -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.Findroid.DynamicColors" parent="ThemeOverlay.Material3.DynamicColors.Dark">
        <item name="android:navigationBarColor">?attr/colorSurfaceContainer</item>
    </style>

    <string-array name="themes">
        <item>@string/theme_dark</item>
    </string-array>

    <string-array name="themes_value">
        <item>dark</item>
    </string-array>
</resources>