<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom fade -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#00000000"
                android:centerColor="#20000000"
                android:endColor="#70000000"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Top slight fade -->
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#00000000"
                android:centerColor="#05000000"
                android:endColor="#15000000"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Left to right fade for content area -->
    <item>
        <shape>
            <gradient
                android:angle="0"
                android:startColor="#30000000"
                android:centerColor="#10000000"
                android:endColor="#00000000"
                android:type="linear" />
        </shape>
    </item>
</layer-list>